extends layouts/main-layout.pug 

block styles
    title #{docTitle}
    link(rel="stylesheet", href="/css/main.css")

block content
    main
        if prods.length > 0
            div.grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://cdn.pixabay.com/photo/2016/09/10/17/18/book-1659717_960_720.jpg", alt="some books on the shelf")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book collection
                        div.card__actions
                            button.btn Add to cart
        else
            h1 No products