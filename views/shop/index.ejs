<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="css/main.css">
</head>

<body>
    <%- include('../includes/navigation.ejs')%>

    <main>
        <% if (prods.length > 0){ %>
            <div class="grid">
            <% for(let i=0; i<prods.length; i++){ %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"> <%= prods[i].title %> </h1>
                        <div class="card__image">
                            <img src="https://cdn.pixabay.com/photo/2016/09/10/17/18/book-1659717_960_720.jpg"
                                alt="some books on the shelf">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$19.99</h2>
                            <p class="product__description">A very interesting book collection</p>
                        </div>
                        <div class="card__actions">
                            <button class="btn">Add to cart</button>
                        </div>
                    </header>
                </article>
            <% } %>
            </div>
        <% } else { %>
            <h1>No products found!</h1>
        <% } %>
    </main>

<%- include('../includes/end.ejs')%>